<script>
    var selectedCategory = JSON.parse(localStorage.getItem('selectedCategory')) || [];
    
	$(".select-all").click(function(){
        var currentId = $(this).attr("id");
		var currentBg = $(this).css("background-color");
        var currentText = $(this).css("color");


        //if already in, remove and change color to white
        if(selectedCategory.includes(currentId)){
            if (selectedCategory.indexOf(currentId) > -1){
                selectedCategory.splice(selectedCategory.indexOf(currentId), 1);
                localStorage.setItem("selectedCategory", JSON.stringify(selectedCategory));
                $(this).css("background-color", "#ffffff");
                $(this).css("color", "#212529");
            }
        //if not, add direcly and change color
        }else{
            selectedCategory.push(currentId);
            localStorage.setItem("selectedCategory", JSON.stringify(selectedCategory));
            $(this).css("background-color", "#657DC4");
            $(this).css("color", "#FFFFFF");
        }
        console.log(selectedCategory);
    })

	//remember id when refresh
    for(var i = 0; i < selectedCategory.length; i++){
        $( ".select-all#"+selectedCategory[i]).css("background-color", "#657DC4");
        $( ".select-all#"+selectedCategory[i]).css("color", "#ffffff");
    } 

</script>